@model PostAddViewModel
@{
    ViewData["Title"] = "Add Post";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">New Post</h4>
        </div>
    </div>
</div>
<!-- end page title -->
<div class="row">
    <div class="col-md-8">


        @if(TempData["StatusMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["StatusMessage"]
            </div>
        }

        <!-- Create new Posts -->
        <div class="" style="width: 100%;">
            <form role="form" method="post" asp-action="add" enctype="multipart/form-data">

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Title" placeholder="Post Title" style="margin-top: 10px;">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select class="custom-select" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "CategoryName"))">
                        <option value="">Select category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Body" class="form-control" placeholder="Enter body of post here..." style="width: 100%;resize: none;height: 300px;"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input placeholder="Post image URL" asp-for="ImageUpload" class="form-control" />
                    <span asp-validation-for="ImageUpload" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select class="custom-select" asp-for="ApplicationUserId" asp-items="@(new SelectList(Model.Users, "Id", "FirstName"))"> 
                        <option>Select post author</option>
                    </select>
                    <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
                </div>

                @*<div class="input-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile04">
                <label class="custom-file-label dripicons-paperclip" for="inputGroupFile04">Attachment</label>
            </div>

        </div>
        <span class="err"></span>*@

                <div class="text-center" style="margin-top: 8px;">
                    <button type="submit" class="btn btn-primary btn-block waves-effect waves-light" name="submit" style="width: 100%;padding: 5px;font-size: 20px;">Publish</button>

                </div>
            </form>  

        </div><!-- /.modal-content -->



    </div> <!-- end col -->
</div>
<!-- end row -->
