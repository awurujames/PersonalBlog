@model UserEditViewModel
@{
    ViewData["Title"] = "Edit User Account";
}


<div class="row">
    <div class="col-md-7">
        <div class="modal-header">
            <h4 class="modal-title" id="myCenterModalLabel">Edit User Account</h4>
        </div>
        <div class="mt-3">
            @if (Model.StatusMessage != null)
            {
                <div class="alert alert-info" role="alert">
                    @Model.StatusMessage
                </div>
            }

            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input type="text" class="form-control" placeholder="Enter first name" autofocus asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input type="text" class="form-control" placeholder="Enter last name" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" placeholder="Enter email" asp-for="Email" readonly/>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label>Role</label>
                    <select class="custom-select" asp-for="Role">
                        <option value="" selected>Select user's role</option>
                        <option value="Administrator">Administrator</option>
                        <option value="Editor">Editor</option>
                        <option value="Moderator">Moderator</option>
                        <option value="Author">Author</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Role"></span>
                </div>


                @*<div class="form-group">
                        <label>Profile Picture</label>
                        <input type="file" class="form-control" />
                        <span class="text-danger"></span>
                    </div>*@

                @*<div class="form-group">
                        <label></label>
                        <input type="password" class="form-control" placeholder="Enter password" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Confirm password">
                        <span class="text-danger"></span>
                    </div>*@

                <div class="text-right">
                    <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
                </div>

                <div asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div><!-- /.modal -->
</div>