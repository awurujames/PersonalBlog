@model HomePostViewModel
@{
    ViewData["Title"] = "Single Post";
}


<!-- PAGE TITLE -->
<div class="eskimo-page-title">
    <h1><span>@Model.Title</span></h1>
    <div class="eskimo-page-title-meta">
        <div class="eskimo-author-meta">
            By <a class="author-meta" href="#">@Model.Author</a>
        </div>
        <div class="eskimo-cat-meta">
            In <a href="#">@Model.Category</a>
        </div>
        <div class="eskimo-date-meta">May 25, 2018</div>
        <div class="eskimo-reading-meta">3 min read</div>
    </div>
</div>
<!-- FEATURED IMAGE -->
<div class="eskimo-featured-img">
    <img src="~/uploads/@Model.ImageURL" alt="" />
</div>
<!-- POST CONTENT -->
<h2><span>@Model.Title</span></h2>
<p style="white-space: pre-line;">
    @Model.Body
</p>



<div class="clearfix"></div>
